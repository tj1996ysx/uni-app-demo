
.list-left{
	height: 150px;
	margin-left: 10px;
	color: #FFFFFF;
	width: 150px;
}
.author{
	height: 35px;
	line-height: 35px;
	font-size: 15px;
}
.title{
	line-height: 22px;
	font-size: 12px;
	width: 100%;
	/* 指定如果足够长的话应该换行 */
	word-wrap: break-word;
}
.music-box{
	width: 100px;
	overflow: hidden;
}
.music{
	width: 160px;
	height: 35px;
	line-height: 35px;
	font-size: 12px;
	-webkit-animation: music 4s linear 0.2s infinite;
	        animation: music 4s linear 0.2s infinite;
}
@-webkit-keyframes music{
0%{
		-webkit-transform: translate3d(80%,0,0);
		        transform: translate3d(80%,0,0);
}
100%{
		-webkit-transform: translate3d(-80%,0,0);
		        transform: translate3d(-80%,0,0);
}
}
@keyframes music{
0%{
		-webkit-transform: translate3d(80%,0,0);
		        transform: translate3d(80%,0,0);
}
100%{
		-webkit-transform: translate3d(-80%,0,0);
		        transform: translate3d(-80%,0,0);
}
}


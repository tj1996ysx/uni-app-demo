
.list-right{
	width: 50px;
	margin: 0 auto;
}
.author-img{
	height: 50px;
	width: 50px;
	border-radius: 50%;
	border: 2px solid #FFFFFF;
	position: relative;
}
.author-add{
	width: 18px;
	height: 18px;
	background-color: #DD524D;
	border-radius: 50%;
	position: absolute;
	bottom: -9px;
	left: 16px;
	text-align: center;
	line-height: 18px;
}
.img {
	width: 50px;
	height: 50px;
	border-radius: 50%
}
.right-box{
	width: 100%;
	height: 40px;
	margin-top: 13px;
	text-align: center;
	line-height: 40px;
	color: #FFFFFF;
	font-size: 15px;
}
.number {
	font-size: 10px;
	text-align: center;
	color: #FFFFFF;
}
.around {
	width: 50px;
	height: 50px;
	margin-top: 15px;
	-webkit-animation: rotate 1.5s linear 0.2s infinite;
	        animation: rotate 1.5s linear 0.2s infinite;
}
@-webkit-keyframes rotate{
0%{
		-webkit-transform: rotate(0deg);
		        transform: rotate(0deg);
}
100%{
		-webkit-transform: rotate(360deg);
		        transform: rotate(360deg);
}
}
@keyframes rotate{
0%{
		-webkit-transform: rotate(0deg);
		        transform: rotate(0deg);
}
100%{
		-webkit-transform: rotate(360deg);
		        transform: rotate(360deg);
}
}

